---
import PlaceholderForm from './PlaceholderForm.tsx';
---

<PlaceholderForm client:only="react" />

<script>
  import '../scripts/placeholder-dom.ts';
</script>

<style is:global>
  .ph-form-wrapper {
    margin-block: 1rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    padding: 0.75rem;
    background: var(--sl-color-gray-7);
  }
  .ph-form-wrapper summary {
    cursor: pointer;
    font-weight: 600;
    color: var(--sl-color-white);
  }
  .ph-form-wrapper[open] summary {
    margin-bottom: 0.75rem;
  }
  .ph-form-wrapper fieldset {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    padding: 0.75rem;
    margin-bottom: 0.75rem;
  }
  .ph-form-wrapper legend {
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--sl-color-text-accent);
    padding: 0 0.25rem;
  }
  .ph-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 0.5rem;
  }
  .ph-form-wrapper label {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }
  .ph-label {
    font-size: 0.75rem;
    color: var(--sl-color-gray-2);
  }
  .ph-form-wrapper input,
  .ph-form-wrapper select {
    padding: 0.35rem 0.5rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.25rem;
    background: var(--sl-color-gray-6);
    color: var(--sl-color-white);
    font-family: var(--sl-font-mono);
    font-size: 0.85rem;
  }
  .ph-form-wrapper input:focus,
  .ph-form-wrapper select:focus {
    outline: 2px solid var(--sl-color-text-accent);
    outline-offset: -1px;
  }
  .ph-reset {
    margin-top: 0.5rem;
    padding: 0.35rem 0.75rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.25rem;
    background: var(--sl-color-gray-6);
    color: var(--sl-color-white);
    cursor: pointer;
    font-size: 0.8rem;
  }
  .ph-reset:hover {
    background: var(--sl-color-gray-5);
  }
  span.ph-value {
    color: var(--sl-color-text-accent);
    font-weight: 600;
  }
</style>
